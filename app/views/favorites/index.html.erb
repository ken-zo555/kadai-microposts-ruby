<% if @favorites.any? %>
  <ul class="media-list">
    <% @favorites.each do |f| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(f.user, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= link_to f.user.name, user_path(f.user) %> <span class="text-muted">posted at <%= f.created_at %></span>
          </div>
          <div>
            <p><%= f.content %></p>
          </div>
        </div>
        <div class="media-right">
          <div>
            <%= render 'favorites/favorite_button', micropost: f %>
            <% if current_user == f.user %>
              <%= link_to "Delete", f, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <% else %>
              <a href="#" class="btn btn-default btn-xs btn-block disabled" role="button">Delete</a>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @favorites %>
<% end %>
